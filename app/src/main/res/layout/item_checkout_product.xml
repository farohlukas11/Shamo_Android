<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_checkout_product"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_2">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_checkout_product"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/image_shoes" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_name_checkout_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_semibold"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toStartOf="@id/tv_items_checkout_product"
            app:layout_constraintStart_toEndOf="@id/iv_checkout_product"
            app:layout_constraintTop_toTopOf="@id/iv_checkout_product"
            tools:text="Terrex Urban Low" />

        <TextView
            android:id="@+id/tv_price_checkout_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/price"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="@id/tv_name_checkout_product"
            app:layout_constraintTop_toBottomOf="@id/tv_name_checkout_product"
            tools:text="$143,98" />

        <TextView
            android:id="@+id/tv_items_checkout_product"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/secondary_text"
            app:layout_constraintBottom_toBottomOf="@id/iv_checkout_product"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/iv_checkout_product"
            tools:text="2 Items" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>